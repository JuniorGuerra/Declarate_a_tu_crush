<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DeclarateActivity"
    android:fitsSystemWindows="true"
    android:background="@color/colorAccent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/heart_700141_1280"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Declaracion"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/declararse"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/btnSi"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/Si"
                android:layout_marginRight="30dp"
                android:background="@drawable/rounder_button_green"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/btnNo"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="@string/No"
                android:background="@drawable/rounder_button"
                android:textStyle="bold"
                android:textSize="15dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>